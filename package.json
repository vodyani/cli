{
  "name": "@vodyani/cli",
  "license": "MIT",
  "version": "8.0.0",
  "author": "ChoGathK",
  "description": "ðŸ¤– cli is a command line interface tool to help you initialize, develop and maintain vodyani applications.",
  "homepage": "https://github.com/vodyani/cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/cli.git"
  },
  "keywords": [
    "vodyani",
    "nodejs",
    "nestjs",
    "cli",
    "npm-package"
  ],
  "bugs": {
    "url": "https://github.com/vodyani/cli/issues"
  },
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist"
  ],
  "main": "dist/index.js",
  "bin": {
    "vodyani": "dist/index.js"
  },
  "scripts": {
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "install:all": "npm i && npm i @vodyani/eslint-config -D && npx husky install",
    "build": "rm -rf dist && tsc",
    "test": "ts-node ./index.ts",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:html-report": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:json-report": "eslint ./src ./test -f json -o eslint-report.json"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@vodyani"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/lodash": "^4.14.181",
    "@types/mustache": "^4.1.2",
    "@types/node": "16.11.26",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.11",
    "@vodyani/eslint-config": "^1.0.9",
    "husky": "7.0.4",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^5.1.0",
    "figlet": "^1.5.2",
    "inquirer": "^7.3.1",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "semver": "^7.3.7",
    "shelljs": "^0.8.5"
  }
}
